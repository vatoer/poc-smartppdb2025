{
  "name": "@workspace/database",
  "version": "1.0.0",
  "exports": {
    "./*": "./src/*.ts",
    "./data/*": "./src/data/*.ts"
  },
  "scripts": {
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/seed.ts",
    "dev": "tsup src/* --watch",
    "format": "prisma format",
    "generate": "prisma generate",
    "db:migrate:deploy:auth": "prisma migrate deploy --schema ./prisma/auth-schema.prisma",
    "db:migrate:dev:auth": "prisma migrate dev --schema ./prisma/auth-schema.prisma",
    "db:push:auth": "prisma db push --schema ./prisma/auth-schema.prisma",
    "generate:auth": "prisma generate --schema ./prisma/auth-schema.prisma",
    "lint": "eslint . --max-warnings 0",
    "prebuild": "npm run generate",
    "predev": "npm run generate",
    "studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "argon2": "^0.41.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prisma": "^6.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
